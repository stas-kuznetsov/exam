
pipeline {
    agent any 
    stages {
        
        stage('Stage 1. Cloning java repo') {
            steps {
       //         sh "rm -Rf /var/lib/jenkins/workspace/*"
                echo 'Start cloning java repo'
                sh "git clone https://github.com/stas-kuznetsov/epam_source.git"
                echo 'End cloning java repo'
                
            }
        }
        
        stage('Stage 2. Build App') {
            steps {
                echo 'Start building app'
    //            sh "cd /Jenkins/spring-petclinic; /Jenkins/spring-petclinic/mvnw package"
                sh "cd epam_source; ./mvnw spring-boot:build-image:BUILD_NUMBER"
                echo 'End building app'
            }
        }
        
        stage('Stage 3. Create Docker Container') {
            steps {
                echo 'Start creating Docker Container'
      //          sh "cd /Jenkins; git clone https://github.com/stas-kuznetsov/exam.git; cp /Jenkins/spring-petclinic/target/spring-petclinic-2.7.0-SNAPSHOT.jar /Jenkins/app1.jar; docker build -t petclinic:$BUILD_NUMBER /Jenkins/exam"
                
                echo 'End creating Docker Container'
            }
        }
        
        stage('Stage 4') {
            steps {
                echo 'Hello world!' 
            }
        }
        
    }
}
