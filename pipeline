
pipeline {
    agent any 
    stages {
        
        stage('Stage 1. Cloning java repo') {
            steps {
                sh "rm -Rf /var/lib/jenkins/workspace/Exam/*"
                echo 'Start cloning java repo'
                sh "git clone https://github.com/spring-projects/spring-petclinic.git"
                echo 'End cloning java repo'
                
            }
        }
        
        stage('Stage 2. Build App') {
            steps {
                echo 'Start building app'
                sh "./spring-petclinic/mvnw package"
     //           sh "./mvnw package"
                echo 'End building app'
            }
        }
        
        stage('Stage 3') {
            steps {
                echo 'Hello world!' 
            }
        }
        
        stage('Stage 4') {
            steps {
                echo 'Hello world!' 
            }
        }
        
    }
}
